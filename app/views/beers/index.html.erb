<h1>Listing beers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Rating</th>
    <th>Type</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @beers.each do |beer| %>
  <tr>
    <td><%= beer.name %></td>
    <td><%= beer.rating %></td>
    <td><%= beer.type %></td>
    <td><%= beer.description %></td>
    <td><%= link_to 'Show', beer %></td>
    <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
    <td><%= link_to 'Destroy', beer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

